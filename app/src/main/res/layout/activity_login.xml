<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relayout_login"
    tools:context="com.wangjicheng.studentsystem.activity.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/login"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/lay_user"
        android:paddingLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/username"
            android:layout_alignBottom="@+id/edit_user"
            />

        <EditText
            android:id="@+id/edit_user"
            android:layout_width="200dp"
            android:textColor="@color/textColor_normal"
            android:ems="10"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/user" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/lay_pwd"
        android:paddingLeft="30dp"
        android:layout_below="@+id/lay_user">

        <TextView
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/password"
            />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="200dp"
            android:inputType="textPassword"
            android:textColor="@color/textColor_normal"
            android:ems="10"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/pwd"
            />

    </RelativeLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="@string/login"
        android:id="@+id/bt_login"
        android:background="@drawable/btn_bg"
        android:layout_below="@+id/lay_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />



</RelativeLayout>
